{% extends 'layout.njk' %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}

    <div class="grid_container recipes">

        {% for recipe in recipes %}

            <div class="recipe" id="{{ recipe.id }}">
                <div class="recipe-image" style="background: url({{recipe.image}}) no-repeat center center / cover"></div>
                <div class="recipe-name">
                    <p>{{recipe.title}}</p>
                </div>
                <div class="recipe-info">
                    <p>{{recipe.author}}</p>
                </div>
            </div>

        {% endfor %}

    </div>

{% endblock %}

{% block scripts %}
    <script src="/scripts/scripts.js"></script>
{% endblock %}